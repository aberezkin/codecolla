.Chat
  min-width 320px
  height 100%
  display flex
  flex-direction column
  resize horizontal
  .MessageBox
    display block
    background-color lightcyan
    width 100%
    overflow-y auto
    flex 1 1 auto
  .InputBox
    height fit-content
    width 100%
    display flex
    flex-direction row
    .InputArea
      padding 4px
      width 100%
      resize none
      border none
      overflow auto
      outline none
      -webkit-box-shadow none
      -moz-box-shadow none
      box-shadow none
    .SendButton
      width 40px
      text-align center
      margin auto