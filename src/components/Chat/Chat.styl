.Chat
  width 100%
  height 100%
  display flex
  flex-direction column
  resize horizontal
  border-left 1px solid black
  outline none
  .MessageBox
    display block
    width 100%
    height 0
    overflow-y auto
    flex 1 1 auto
    background lightcyan
  .InputBox
    height fit-content
    width 100%
    display flex
    flex-direction row
    .InputArea
      background inherit
      color inherit
      padding 4px
      width 100%
      resize none
      border none
      overflow auto
      outline none
      -webkit-box-shadow none
      -moz-box-shadow none
      box-shadow none
    .SendButton
      width 40px
      display flex
      text-align center
      span
        margin auto
        user-select none