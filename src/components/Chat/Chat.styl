.Chat
  min-width 320px
  height 100%
  display flex
  flex-direction column
  resize horizontal
  .MessageBox
    display block
    background-color lemonchiffon
    width 100%
    overflow-y auto
    flex 1 1 auto
  .InputBox
    height fit-content
    width 100%
    display flex
    flex-direction row
    margin 4px
    .InputArea
      width 100%
      resize none
    .SendButton
      width 40px
      text-align center
      margin auto