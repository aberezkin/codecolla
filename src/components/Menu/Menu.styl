.menu-wrapper
  background inherit
  color inherit
  border-bottom 1px solid black
  width 100%

.MenuBar
  display flex
  background inherit
  color inherit
  font-family sans-serif
  width fit-content
  position relative
  cursor default
  user-select none
  > *
    height 100%
    outline none
    user-select none
    .title
      padding 1px 4px
      outline none
      user-select none
  .MenuItem, .Checkable
    list-style none
    background inherit
  .SubMenu
    background inherit
    position absolute
    z-index 6
    border 1px solid black
    > *
      outline none
      user-select none
    .SubMenu
      margin 2px 5px
    .MenuItem .title, .Checkable .title
      display block
  .Separator
    width 100%
    height 0
    border-bottom 1px black solid